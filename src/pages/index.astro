---
import Hero from '../components/Hero.astro';
import Topics from '../components/Topics.astro';
import Audience from '../components/Audience.astro';
import Format from '../components/Format.astro';
import Signup from '../components/Signup.astro';
import Speaker from '../components/Speaker.astro';
import Footer from '../components/Footer.astro';
---

<html lang="cs">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>Evals.cz - Pražský meetup o evaluaci AI aplikací</title>
		<meta name="description" content="Pražský meetup pro lidi, kteří staví nebo zkoumají produkty poháněné AI. Praktické hodnocení RAG systémů a LLM funkcionalit v produkci." />

		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.evals.cz/" />
		<meta property="og:title" content="Evals.cz - Pražský meetup o evaluaci AI aplikací" />
		<meta property="og:description" content="Pražský meetup pro lidi, kteří staví nebo zkoumají produkty poháněné AI. Praktické hodnocení RAG systémů a LLM funkcí v produkci." />
		<meta property="og:image" content="https://www.evals.cz/og-image.png" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content="https://www.evals.cz/" />
		<meta name="twitter:title" content="Evals.cz - Pražský meetup o evaluaci AI aplikací" />
		<meta name="twitter:description" content="Pražský meetup pro lidi, kteří staví nebo zkoumají produkty poháněné AI." />
		<meta name="twitter:image" content="https://www.evals.cz/og-image.png" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Hero />
		<Topics />
		<Audience />
		<Format />
		<Signup />
		<Speaker />
		<Footer />

		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
				border-radius: 0 !important;
			}

			:root {
				--black: #000000;
				--white: #FFFFFF;
				--gray-10: #1A1A1A;
				--gray-90: #E5E5E5;
				--accent: #D7141A;
				--accent-dark: #B01016;
				--accent-alt: #11457E;

				--font-display: 'Space Grotesk', 'Arial Black', sans-serif;
				--font-mono: 'JetBrains Mono', 'Courier New', monospace;
				--font-ui: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif;

				--border-thin: 2px;
				--border-standard: 4px;
				--border-thick: 6px;
				--border-heavy: 8px;

				--space-xs: 0.5rem;
				--space-sm: 1rem;
				--space-md: 2rem;
				--space-lg: 4rem;
				--space-xl: 6rem;
			}

			html {
				scroll-behavior: auto;
			}

			body {
				font-family: var(--font-mono);
				background: var(--white);
				color: var(--black);
				line-height: 1.6;
				overflow-x: hidden;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Global Button Styles */
			.btn {
				padding: 1.25rem 3rem;
				font-family: var(--font-ui);
				font-weight: 700;
				font-size: 1rem;
				text-decoration: none;
				border: var(--border-standard) solid var(--black);
				cursor: pointer;
				display: inline-block;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				transition: all 0.1s ease;
			}

			.btn-primary {
				background: var(--accent);
				color: white;
				box-shadow: 6px 6px 0 var(--black);
			}

			.btn-primary:hover {
				background: var(--accent-dark);
				transform: translate(2px, 2px);
				box-shadow: 4px 4px 0 var(--black);
			}

			.btn-primary:active {
				transform: translate(6px, 6px);
				box-shadow: 0 0 0 var(--black);
			}

			.btn-secondary {
				background: var(--white);
				color: var(--black);
				box-shadow: 6px 6px 0 var(--black);
			}

			.btn-secondary:hover {
				background: var(--black);
				color: var(--white);
				transform: translate(2px, 2px);
				box-shadow: 4px 4px 0 var(--accent);
			}

			.btn-secondary:active {
				transform: translate(6px, 6px);
				box-shadow: 0 0 0 var(--black);
			}

			/* Responsive */
			@media (max-width: 768px) {
				.container {
					padding: 0 1.5rem;
				}

				.btn-primary,
				.btn-secondary {
					box-shadow: 4px 4px 0 var(--black);
				}
			}
		</style>
	</body>
</html>
