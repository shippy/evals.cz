			}

			.hero-content {
				position: relative;
				z-index: 1;
				text-align: center;
				padding: 4rem 0;
			}

			.hero-title {
				font-size: clamp(3rem, 8vw, 6rem);
				font-weight: 800;
				margin-bottom: 1rem;
				line-height: 1.1;
			}

			.gradient-text {
				background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.hero-subtitle {
				font-size: clamp(1.25rem, 3vw, 1.75rem);
				color: var(--text-muted);
				margin-bottom: 2rem;
				font-weight: 500;
			}

			.hero-description {
				font-size: clamp(1rem, 2vw, 1.25rem);
				max-width: 700px;
				margin: 0 auto 3rem;
				color: var(--text);
				line-height: 1.8;
			}

			.hero-cta {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.btn {
				padding: 1rem 2rem;
				border-radius: 0.75rem;
				font-weight: 600;
				font-size: 1rem;
				text-decoration: none;
				transition: all 0.3s ease;
				border: 2px solid transparent;
				cursor: pointer;
				display: inline-block;
			}

			.btn-primary {
				background: linear-gradient(135deg, var(--primary), var(--secondary));
				color: white;
			}

			.btn-primary:hover {
				transform: translateY(-2px);
				box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
			}

			.btn-secondary {
				background: transparent;
				border-color: var(--primary);
				color: var(--primary);
			}

			.btn-secondary:hover {
				background: var(--primary);
				color: white;
				transform: translateY(-2px);
			}

			/* Section Styles */
			section {
				padding: 6rem 0;
			}

			.section-title {
				font-size: clamp(2rem, 5vw, 3rem);
				font-weight: 700;
				text-align: center;
				margin-bottom: 3rem;
			}

			/* Topics Section */
			.topics {
				background: var(--bg);
			}

			.topics-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
			}

			.topic-card {
				background: var(--bg-card);
				padding: 2rem;
				border-radius: 1rem;
				border: 1px solid var(--border);
				transition: all 0.3s ease;
			}

			.topic-card:hover {
				transform: translateY(-5px);
				border-color: var(--primary);
				box-shadow: 0 10px 30px rgba(99, 102, 241, 0.2);
			}

			.topic-icon {
				font-size: 3rem;
				margin-bottom: 1rem;
			}

			.topic-card h3 {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
				color: var(--text);
			}

			.topic-card p {
				color: var(--text-muted);
			}

			/* Audience Section */
			.audience {
				background: linear-gradient(180deg, var(--bg) 0%, var(--bg-light) 100%);
			}

			.audience-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 1.5rem;
			}

			.audience-card {
				background: var(--bg-card);
				padding: 1.5rem;
				border-radius: 0.75rem;
				border: 1px solid var(--border);
				transition: all 0.3s ease;
			}

			.audience-card:hover {
				border-color: var(--secondary);
				transform: translateX(5px);
			}

			.audience-badge {
				display: inline-block;
				background: linear-gradient(135deg, var(--primary), var(--secondary));
				padding: 0.5rem 1rem;
				border-radius: 0.5rem;
				font-weight: 600;
				font-size: 0.95rem;
				margin-bottom: 0.75rem;
			}

			.audience-card p {
				color: var(--text-muted);
			}

			/* Format Section */
			.format {
				background: var(--bg);
			}

			.format-content {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 3rem;
				max-width: 900px;
				margin: 0 auto;
			}

			.format-details {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
			}

			.format-item {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				padding: 1.5rem;
				background: var(--bg-card);
				border-radius: 0.75rem;
				border-left: 4px solid var(--primary);
			}

			.format-label {
				font-weight: 600;
				font-size: 1rem;
				color: var(--primary);
			}

			.format-value {
				color: var(--text);
				font-size: 1.1rem;
			}

			.format-philosophy {
				display: flex;
				align-items: center;
			}

			blockquote {
				font-size: 1.5rem;
				font-style: italic;
				color: var(--text);
				padding: 2rem;
				background: var(--bg-card);
				border-radius: 0.75rem;
				border-left: 4px solid var(--accent);
			}

			.quote-attribution {
				display: block;
				font-size: 1rem;
				font-style: normal;
				color: var(--text-muted);
				margin-top: 1rem;
			}

			/* CTA Section */
			.cta-section {
				background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
			}

			.cta-card {
				text-align: center;
				max-width: 600px;
				margin: 0 auto;
			}

			.cta-card h2 {
				font-size: clamp(1.75rem, 4vw, 2.5rem);
				margin-bottom: 1rem;
			}

			.cta-card p {
				font-size: 1.1rem;
				margin-bottom: 2rem;
				opacity: 0.95;
			}

			.signup-form {
				display: flex;
				gap: 1rem;
				flex-wrap: wrap;
				justify-content: center;
			}

			.email-input {
				flex: 1;
				min-width: 250px;
				padding: 1rem 1.5rem;
				border-radius: 0.75rem;
				border: 2px solid transparent;
				font-size: 1rem;
				background: white;
				color: var(--bg);
			}

			.email-input:focus {
				outline: none;
				border-color: var(--accent);
			}

			/* Speaker Section */
			.speaker-section {
				background: var(--bg);
			}

			.speaker-intro {
				text-align: center;
				font-size: 1.25rem;
				color: var(--text-muted);
				margin-bottom: 3rem;
			}

			.speaker-topics {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
				margin-bottom: 3rem;
			}

			.speaker-topic {
				background: var(--bg-card);
				padding: 2rem;
				border-radius: 0.75rem;
				border: 1px solid var(--border);
				transition: all 0.3s ease;
			}

			.speaker-topic:hover {
				border-color: var(--accent);
				transform: translateY(-5px);
			}

			.topic-number {
				display: block;
				font-size: 2.5rem;
				font-weight: 700;
				background: linear-gradient(135deg, var(--primary), var(--accent));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin-bottom: 0.5rem;
			}

			.speaker-topic h3 {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
			}

			.speaker-topic p {
				color: var(--text-muted);
			}

			.speaker-section > .container > .btn {
				display: block;
				width: fit-content;
				margin: 0 auto;
			}

			/* Footer */
			.footer {
				background: var(--bg-light);
				padding: 3rem 0;
				text-align: center;
				border-top: 1px solid var(--border);
			}

			.footer p {
				margin-bottom: 0.5rem;
				color: var(--text-muted);
			}

			.footer strong {
				color: var(--text);
			}

			.footer-note {
				font-size: 0.9rem;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.hero {
					min-height: 80vh;
				}

				section {
					padding: 4rem 0;
				}

				.container {
					padding: 0 1.5rem;
				}

				.signup-form {
					flex-direction: column;
				}

				.email-input {
					width: 100%;
				}
			}
		</style>

		<script>
