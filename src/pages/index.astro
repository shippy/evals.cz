			:root {
				--primary: #6366f1;
				--primary-dark: #4f46e5;
				--secondary: #8b5cf6;
				--accent: #ec4899;
				--bg: #0f172a;
				--bg-light: #1e293b;
				--bg-card: #1e293b;
				--text: #f1f5f9;
				--text-muted: #94a3b8;
				--border: #334155;
			}

			html {
